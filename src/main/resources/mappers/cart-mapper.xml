<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CartMapper">
	<resultMap type="Cart" id="cartResultMap">
		<id 	property="cartNo" 		column="CART_NO"/>
		<result property="memberId" 	column="MEMBER_ID"/>
		<result property="productNo"	column="PRODUCT_NO"/>
		<result property="productName"	column="PRODUCT_NAME"/>
		<result property="productColor" column="PRODUCT_COLOR"/>
		<result property="pImagePath" column="P_IMAGE_PATH"/>
		<result property="amount" 		column="AMOUNT"/>
		<result property="cartPrice" 	column="CART_PRICE"/>
	</resultMap>
	<insert id="insertCart">
		INSERT INTO CART_TBL VALUES(SEQ_CART_NO.NEXTVAL, #{memberId}, #{productNo}, #{productName}, #{productColor}, #{pImagePath}, #{amount}, #{cartPrice})
	</insert>
	<delete id="deleteCart">
		DELETE FROM CART_TBL WHERE CART_NO = #{cartNo}
	</delete>
	<select id="selectAllCarts" resultMap="cartResultMap">
		SELECT * FROM CART_TBL WHERE MEMBER_ID = #{memberId}
	</select>
	<select id="selectOneByNo" resultMap="cartResultMap">
		SELECT * FROM CART_TBL WHERE CART_NO = #{cartNo}
	</select>
</mapper>